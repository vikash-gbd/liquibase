<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Your XML-based changelogs (tables, functions) -->
    <include file="liquibase-tables.xml" relativeToChangelogFile="true"/>
    <include file="liquibase-functions.xml" relativeToChangelogFile="true"/>

    <!-- Include all SQL in your function folder by letting the CLI search it -->
    <includeAll 
        path="ddl/DEMO_SCHEMA/function" 
        relativeToChangelogFile="false"
        errorIfMissingOrEmpty="false"/>
</databaseChangeLog>
